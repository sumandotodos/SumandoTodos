        - theList: []
        - theList: []
        - theList: []
        - theList: []
        - theList: []
        - theList: []
        - theList: []
      - theList:
        - theList: []
        - theList: []
        - theList:
          - key: Declarations_1_209
            text: "Una educaci\xF3n que ense\xF1e a vivir dar\xE1 como resultado a
              j\xF3venes que sabr\xE1n hacer un buen uso de su libertad."
